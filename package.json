{
  "name": "web05-boostcamp",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo project with React frontend and NestJS backend",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  },
  "lint-staged": {
    "packages/backend/**/*.{ts,js}": [
      "pnpm --filter @web05-boostcamp/backend lint"
    ],
    "packages/frontend/**/*.{ts,tsx,js,jsx}": [
      "pnpm --filter @web05-boostcamp/frontend lint"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
